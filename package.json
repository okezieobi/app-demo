{
  "name": "app-demo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "release": "npm run build && npm run start",
    "build": "npm run clean && npm run build:app",
    "build:app": "npx tsc",
    "test": "jest",
    "test:single": "cross-env NODE_ENV=testing jest tests/**/*.spec.ts",
    "coverage": "npm run test -- '--coverage'",
    "coverage:codacy": "npm run coverage && cp -R coverage .github/workflows/coverage/",
    "test:ci": "cross-env NODE_ENV=testing-ci jest '--runInBand'",
    "coverage:ci": "npm run test:ci -- '--coverage'",
    "coverage:codacy:ci": "npm run coverage:ci && cp -R coverage .github/workflows/coverage/",
    "start:dev": "cross-env NODE_ENV=development DEBUG=app-demo:* nodemon ./src/bin/www.ts",
    "start": "node ./bin/www.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "debug": "^2.6.9",
    "express": "^4.16.1",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "latest",
    "@types/debug": "latest",
    "@types/express": "latest",
    "@types/morgan": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "2.8.7",
    "ts-node": "^10.9.1",
    "nodemon": "^2.0.21",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
